<% if logged_in? %>
  <h1><%= current_user.name %> のタスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  <%= link_to '新規タスクの登録', new_task_path %>
  
<% else %>
  <div>
    <h1>Welcome to the Microposts</h1>
    <%= link_to 'Sign up now!', signup_path %>
  </div>
<% end %>